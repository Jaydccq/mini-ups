# Production Environment Configuration for Mini-UPS

# Database Configuration (AWS RDS)
DATABASE_URL=jdbc:postgresql://${DB_ENDPOINT}:5432/ups_db
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=${DB_PASSWORD}

# Redis Configuration (AWS ElastiCache)
REDIS_HOST=${REDIS_ENDPOINT}
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=${JWT_SECRET}

# World Simulator Configuration
WORLD_SIMULATOR_HOST=world-simulator.mini-ups.com
WORLD_SIMULATOR_PORT=12345

# Amazon Integration Configuration
AMAZON_BASE_URL=https://amazon.mini-ups.com

# Application Configuration
SPRING_PROFILES_ACTIVE=aws
SERVER_PORT=8081

# Frontend Configuration
VITE_API_BASE_URL=https://api.mini-ups.com
VITE_WS_URL=wss://api.mini-ups.com

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}

# Monitoring Configuration
ENABLE_METRICS=true
LOG_LEVEL=INFO

# Security Configuration
CORS_ALLOWED_ORIGINS=https://mini-ups.com,https://www.mini-ups.com
SECURITY_HEADERS_ENABLED=true

# Performance Configuration
JVM_OPTS=-Xms512m -Xmx1024m -XX:+UseG1GC
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# Backup Configuration
DB_BACKUP_ENABLED=true
DB_BACKUP_RETENTION_DAYS=7

# SSL Configuration
SSL_ENABLED=true
SSL_CERTIFICATE_PATH=/etc/ssl/certs/mini-ups.com.crt
SSL_PRIVATE_KEY_PATH=/etc/ssl/private/mini-ups.com.key