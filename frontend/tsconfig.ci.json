{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "strict": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src", "vite.config.*.ts", "vitest.config.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.tsx", "**/*.test.ts", "src/test/**/*"]
}