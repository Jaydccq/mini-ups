# Mini-UPS Frontend Staging Environment

# ========================================
# API Configuration
# ========================================
VITE_API_BASE_URL=https://staging-api.miniups.com
VITE_WS_BASE_URL=wss://staging-api.miniups.com

# ========================================
# App Configuration
# ========================================
VITE_APP_NAME=Mini-UPS (Staging)
VITE_APP_VERSION=1.0.0-staging
VITE_APP_DESCRIPTION=Mini-UPS Logistics Management System - Staging Environment

# ========================================
# Feature Flags (Staging)
# ========================================
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_REAL_TIME=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PWA=false

# ========================================
# External Services (Staging)
# ========================================
# Analytics (Staging)
VITE_ANALYTICS_ID=GA_STAGING_ID
VITE_SENTRY_DSN=https://your-staging-sentry-dsn

# ========================================
# Security & Auth (Staging)
# ========================================
VITE_SESSION_TIMEOUT=3600000
VITE_ENABLE_HTTPS=true

# ========================================
# Performance & Debugging (Staging)
# ========================================
VITE_LOG_LEVEL=warn
VITE_ENABLE_SOURCE_MAPS=true
VITE_ENABLE_BUNDLE_ANALYZER=false

# ========================================
# CDN & Assets (Staging)
# ========================================
VITE_CDN_URL=https://staging-cdn.miniups.com
VITE_STATIC_ASSETS_URL=https://staging-assets.miniups.com