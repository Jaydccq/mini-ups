# Mini-UPS Frontend Environment Variables

# ========================================
# API Configuration
# ========================================
VITE_API_BASE_URL=http://localhost:8081
VITE_WS_BASE_URL=ws://localhost:8081

# ========================================
# App Configuration
# ========================================
VITE_APP_NAME=Mini-UPS
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Mini-UPS Logistics Management System

# ========================================
# Feature Flags
# ========================================
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_REAL_TIME=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_PWA=false

# ========================================
# External Services
# ========================================
# Analytics (Google Analytics, etc.)
VITE_ANALYTICS_ID=
VITE_SENTRY_DSN=

# Map Services
VITE_GOOGLE_MAPS_API_KEY=
VITE_MAPBOX_ACCESS_TOKEN=

# ========================================
# Security & Auth
# ========================================
VITE_JWT_SECRET_KEY=your-secret-key-here
VITE_SESSION_TIMEOUT=3600000
VITE_ENABLE_HTTPS=false

# ========================================
# Performance & Debugging
# ========================================
VITE_LOG_LEVEL=info
VITE_ENABLE_SOURCE_MAPS=false
VITE_ENABLE_BUNDLE_ANALYZER=false

# ========================================
# CDN & Assets
# ========================================
VITE_CDN_URL=
VITE_STATIC_ASSETS_URL=

# ========================================
# Notification Services
# ========================================
VITE_PUSHER_APP_KEY=
VITE_PUSHER_CLUSTER=
VITE_FIREBASE_CONFIG=

# ========================================
# Third-party Integrations
# ========================================
VITE_STRIPE_PUBLISHABLE_KEY=
VITE_PAYPAL_CLIENT_ID=